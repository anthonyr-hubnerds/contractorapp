{
  "name": "buildsync-monorepo",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "bootstrap": "npm install",
    "dev:web": "cd apps/web && npm run dev",
    "dev:api": "cd apps/api && npm run dev",
    "dev:mobile": "cd apps/mobile && npm run start",
    "dev": "concurrently \"npm:dev:api\" \"npm:dev:web\" \"npm:dev:mobile\""
  },
  "devDependencies": {
    "concurrently": "^8.0.0"
  }
}